@model Negocio.Empleado

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Formulario</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Empleado</h2>
            <h5>Ingrese los datos del empleado</h5>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <hr />
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Form", "Empleado", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.EmpleadoID, new { @class = "hidden" })
                            @Html.TextBoxFor(model => model.EmpleadoID, new { @class = "hidden form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.EmpleadoID)
                            @*hidden*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Nombre)
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "txtNombre" })
                            @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Puesto.PuestoID)
                            @Html.TextBoxFor(model => model.Puesto.PuestoID, new { @class = "form-control", @id = "txtPuestoID" })
                            @Html.ValidationMessageFor(model => model.Puesto.PuestoID, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Departamento.DepartamentoID)
                            @Html.TextBoxFor(model => model.Departamento.DepartamentoID, new { @class = "form-control", @id = "txtDepartamentoID" })
                            @Html.ValidationMessageFor(model => model.Departamento.DepartamentoID, null, new { @class = "text-danger" })
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="col-md-3">
                            <input type="submit" value="Guardar" class="btn btn-success" />
                            @Html.ActionLink("Regresar", "GetAll", "Empleado", htmlAttributes: new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>


            }


        </div>
    </div>
</div>

