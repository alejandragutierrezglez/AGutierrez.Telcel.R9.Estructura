@model Negocio.Departamento
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>Bienvenidos</h2>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-md-12">

        <table class="table table-hover" id="tblDepartamento">
            <thead>
                <tr class="table-secondary">
                    <td>DepartamentoID</td>
                    <td>Descripcion</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Negocio.Departamento departamento in Model.Departamentos)
                {
                    <tr>
                        <td>@departamento.DepartamentoID </td>
                        <td>@departamento.Descripcion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

