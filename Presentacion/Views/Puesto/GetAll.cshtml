@model Negocio.Puesto
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>Bienvenidos</h2>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">

        <table class="table table-hover" id="tblPuesto">
            <thead>
                <tr class="table-secondary">
                    <td>PuestoID</td>
                    <td>Descripcion</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Negocio.Puesto puesto in Model.Puestos)
                {
                    <tr>
                        <td>@puesto.PuestoID </td>
                        <td>@puesto.Descripcion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


